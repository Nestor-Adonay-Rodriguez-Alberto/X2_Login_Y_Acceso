@model Entidades.Ciudad

@{
    ViewData["Title"] = "Details";
}

<h1>Detalles</h1>

<div>
    <h4>Ciudad</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayName("NOMBRE DE CIUDAD:")
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
    </dl>
</div>
<div class="form-group col-md-12">
    <a class="btn btn-primary"  asp-action="Edit" asp-route-id="@Model?.IdCiudad">EDITAR</a> |
    <a class="btn btn-secondary"  asp-action="Index">Cancelar</a>
</div>
