@model IEnumerable<Entidades.Rol>

@{
    ViewData["Title"] = "Index";
}

<h1>Registro De Roles</h1>

<p>
    <a asp-action="Create">Crear Nuevo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("NOMBRE:")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdRol">Editar</a>
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.IdRol">Detalles</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdRol">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
